<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>The Verge Headlines</title>
    <style>
        body {
            background-color: white;
            color: black;
            font-family: Arial, sans-serif;
            margin: 40px;
        }
        a {
            color: black;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
        .article {
            margin-bottom: 15px;
        }
        .date {
            font-size: 0.8em;
            color: gray;
        }
    </style>
</head>
<body>
    <h1>The Verge Headlines (From Jan 1, 2022)</h1>
    <div>
        <% articles.forEach(article => { %>
            <div class="article">
                <a href="<%= article.url %>" target="_blank"><strong><%= article.title %></strong></a><br>
                <span class="date"><%= article.date.toDateString() %></span>
            </div>
        <% }); %>
    </div>
</body>
</html>
